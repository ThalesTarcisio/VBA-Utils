Sub MostrarGuias()
    'Check if the bar is not hidden    
    If ActiveWindow.DisplayWorkbookTabs Then
        'If it's not hidden, it'll be hided
        ActiveWindow.DisplayWorkbookTabs = False
    Else
        'If hidden, it'll be shown
        ActiveWindow.DisplayWorkbookTabs = True
    End If
End Sub
